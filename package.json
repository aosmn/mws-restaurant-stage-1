{
  "name": "mws-restaurant-stage-1",
  "version": "1.0.0",
  "description": "--- #### _Three Stage Course Material Project - Restaurant Reviews_",
  "main": "Gruntfile.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "webpack": "webpack",
    "copy-html": "copyfiles index.html restaurant.html sw.js dist",
    "copy-sw": "copyfiles sw.js dist",
    "copy-webp": "copyfiles webpjs-0.0.2.min.js dist",
    "copy-images": "copyfiles img/* dist",
    "copy-styles": "copyfiles css/* dist",
    "copy-scripts": "copyfiles -f lib/*.js dist/js",
    "crunch-images": "imagemin -p jpegoptim img/* --out-dir=dist/img",
    "copy-to-dist": "npm-run-all copy-html copy-sw copy-styles",
    "prestart": "webpack",
    "start": "browser-sync start --no-open --server 'dist' --files 'dist'",
    "build": "npm-run-all webpack copy-to-dist start",
    "watch-start": "nodemon --ignore dist/ -e js,html,css -x \"npm run build\""
  },
  "repository": {
    "type": "git",
